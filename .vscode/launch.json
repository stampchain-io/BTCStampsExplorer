{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Run",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "outputCapture": "std",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "-A",
        "./main.ts"
      ],
      "attachSimplePort": 9229
    }
  ]
}
