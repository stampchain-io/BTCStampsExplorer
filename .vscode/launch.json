{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Run dev.ts",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all",
        "--watch",
        "--no-clear-screen"
      ],
      "program": "${workspaceFolder}/dev.ts",
      "env": {
        "DENO_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Deno: Run main.ts",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "program": "${workspaceFolder}/main.ts",
      "env": {
        "DENO_ENV": "production"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Deno: Debug Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-wait",
        "--allow-all",
        "--config=tests/deno.json"
      ],
      "program": "${workspaceFolder}/tests/",
      "env": {
        "DENO_ENV": "test",
        "SKIP_REDIS_CONNECTION": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
