{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno Fresh: Debug",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "task",
        "dev"
      ],
      "attachSimplePort": 9229,
      "restart": true,
      "outputCapture": "std",
      "env": {
        "DENO_ENV": "development",
        "SKIP_REDIS_CONNECTION": "true"
      },
      // "console": "integratedTerminal",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "autoAttachChildProcesses": false
    },
    {
      "name": "Deno: Production Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "task",
        "dev"
      ],
      "attachSimplePort": 9230,
      "env": {
        "DENO_ENV": "production"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Deno: Debug Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-wait",
        "--allow-all",
        "--config=tests/deno.json"
      ],
      "program": "${workspaceFolder}/tests/unit/",
      "env": {
        "DENO_ENV": "test",
        "SKIP_REDIS_CONNECTION": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "attachSimplePort": 9231
    }
  ]
}
