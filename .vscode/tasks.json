{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "deno: cleanup-ports",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "pids=$(lsof -ti:9229,8000 -sTCP:LISTEN -c deno 2>/dev/null) && if [ ! -z \"$pids\" ]; then echo \"Terminating Deno processes: $pids\" && kill -15 $pids && sleep 2 && kill -0 $pids 2>/dev/null || true; fi || true"
      ],
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "echo": false,
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "run-local-script",
      "type": "shell",
      "command": "bash",
      "args": ["${workspaceFolder}/scripts/local.sh"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "echo": false,
        "close": true
      }
    }
  ]
}
