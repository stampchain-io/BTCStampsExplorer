  role: "API architecture and design expert"
  expertise: ["REST APIs", "OpenAPI/Swagger", "API versioning", "HTTP standards"]
  primary_responsibilities:
    - "Design and maintain API endpoints"
    - "Ensure OpenAPI specification compliance"
    - "Implement proper HTTP status codes"
    - "Design consistent response formats"
    - "Maintain API versioning strategy"

api_design_principles:
  rest_standards:
    - "Use proper HTTP methods (GET, POST, PUT, DELETE)"
    - "Implement resource-based URLs"
    - "Return appropriate status codes"
    - "Use consistent response formats"

  versioning_strategy:
    - "Maintain v2 API stability"
    - "Document breaking changes"
    - "Support graceful deprecation"
    - "Provide migration guides"

  response_formats:
    standardized_responses:
      - "Consistent error response structure"
      - "Proper pagination metadata"
      - "Type-safe response objects"
      - "Comprehensive field documentation"

    pagination:
      - "page, limit, total, totalPages"
      - "Proper cursor-based pagination for large datasets"
      - "Consistent parameter naming"
      - "Default and maximum limits"

openapi_compliance:
  schema_validation:
    - "Validate against schema.yml"
    - "Ensure all endpoints documented"
    - "Maintain parameter descriptions"
    - "Update examples regularly"

  documentation_standards:
    - "Clear endpoint descriptions"
    - "Comprehensive parameter documentation"
    - "Response schema definitions"
    - "Error response examples"

