{
  "info": {
    "name": "BTC Stamps Explorer API - Smoke Tests",
    "description": "Fast smoke tests to verify core API endpoints are functional",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v2", "health"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Health endpoint returns 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Health response is JSON', function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
              "});",
              "",
              "pm.test('Health response has status', function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.have.property('status');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Version Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/version",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v2", "version"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Version endpoint returns 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Version response is fast (<1000ms)', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});",
              "",
              "pm.test('Version response is valid', function () {",
              "    pm.expect(pm.response.text()).to.not.be.empty;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Basic Stamps Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/stamps?limit=1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v2", "stamps"],
          "query": [
            {
              "key": "limit",
              "value": "1"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Stamps endpoint is accessible', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 400, 404]);",
              "});",
              "",
              "if (pm.response.code === 200) {",
              "    pm.test('Stamps response is JSON', function () {",
              "        pm.expect(() => pm.response.json()).to.not.throw();",
              "    });",
              "",
              "    pm.test('Stamps response has data structure', function () {",
              "        const json = pm.response.json();",
              "        pm.expect(json).to.be.an('object');",
              "    });",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Preview - Image Stamp",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v2/stamp/37687/preview",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v2", "stamp", "37687", "preview"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Preview returns 200 with PNG', function () {",
              "    pm.response.to.have.status(200);",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('image/png');",
              "});",
              "",
              "pm.test('Preview has non-empty body', function () {",
              "    pm.expect(pm.response.size().body).to.be.above(0);",
              "});",
              "",
              "pm.test('Preview has caching headers', function () {",
              "    const cacheControl = pm.response.headers.get('Cache-Control');",
              "    pm.expect(cacheControl).to.exist;",
              "    pm.expect(cacheControl).to.include('public');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Preview - HTML Stamp",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v2/stamp/1054189/preview",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v2", "stamp", "1054189", "preview"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// HTML stamps may 302 to fallback if Chrome unavailable",
              "pm.test('Preview HTML stamp responds with 200 or 302', function () {",
              "    pm.expect([200, 302]).to.include(pm.response.code);",
              "});",
              "",
              "if (pm.response.code === 200) {",
              "    pm.test('Preview HTML stamp returns PNG', function () {",
              "        pm.expect(pm.response.headers.get('Content-Type')).to.include('image/png');",
              "    });",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "OG Tags - Stamp Detail Page",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "text/html"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/stamp/37687",
          "host": ["{{baseUrl}}"],
          "path": ["stamp", "37687"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Stamp detail page returns 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const body = pm.response.text();",
              "",
              "pm.test('Has og:image pointing to preview endpoint', function () {",
              "    pm.expect(body).to.match(/og:image[^>]*content=\"[^\"]*\\/api\\/v2\\/stamp\\/37687\\/preview\"/);",
              "});",
              "",
              "pm.test('Has twitter:card summary_large_image', function () {",
              "    pm.expect(body).to.match(/twitter:card[^>]*content=\"summary_large_image\"/);",
              "});",
              "",
              "pm.test('Has twitter:image meta tag', function () {",
              "    pm.expect(body).to.match(/twitter:image[^>]*content=\"[^\"]*\\/api\\/v2\\/stamp\\/37687\\/preview\"/);",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Simple smoke tests - no complex setup needed",
          "console.log('Running smoke tests...');"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Log smoke test completion",
          "console.log('âœ… Smoke test completed for:', pm.info.requestName);"
        ]
      }
    }
  ]
}
