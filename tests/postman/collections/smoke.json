{
  "info": {
    "name": "BTC Stamps Explorer API - Smoke Tests",
    "description": "Fast smoke tests to verify core API endpoints are functional",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v2", "health"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Health endpoint returns 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Health response is JSON', function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
              "});",
              "",
              "pm.test('Health response has status', function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.have.property('status');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Version Check",
      "request": {
        "method": "GET", 
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/version",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v2", "version"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Version endpoint returns 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Version response is fast (<1000ms)', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);",
              "});",
              "",
              "pm.test('Version response is valid', function () {",
              "    pm.expect(pm.response.text()).to.not.be.empty;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Basic Stamps Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept", 
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v2/stamps?limit=1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v2", "stamps"],
          "query": [
            {
              "key": "limit",
              "value": "1"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Stamps endpoint is accessible', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 400, 404]);",
              "});",
              "",
              "if (pm.response.code === 200) {",
              "    pm.test('Stamps response is JSON', function () {",
              "        pm.expect(() => pm.response.json()).to.not.throw();",
              "    });",
              "",
              "    pm.test('Stamps response has data structure', function () {",
              "        const json = pm.response.json();",
              "        pm.expect(json).to.be.an('object');",
              "    });",
              "}"
            ]
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Simple smoke tests - no complex setup needed",
          "console.log('ðŸš€ Running smoke tests...');"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript", 
        "exec": [
          "// Log smoke test completion",
          "console.log('âœ… Smoke test completed for:', pm.info.requestName);"
        ]
      }
    }
  ]
} 