  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Initialize version testing session",
          "if (!pm.collectionVariables.get('test_session_id')) {",
          "    pm.collectionVariables.set('test_session_id', Date.now().toString());",
          "    console.log('ðŸ” Starting API Version Compatibility Testing');",
          "    console.log('  ðŸ“‹ Testing v2.2 (no market data) vs v2.3 (clean market_data)');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Store version test results",
          "const endpoint = pm.request.url.getPath();",
          "const version = pm.request.headers.get('X-API-Version') || 'default';",
          "const testResult = {",
          "    endpoint: endpoint,",
          "    version: version,",
          "    status: pm.response.code,",
          "    responseTime: pm.response.responseTime,",
          "    timestamp: new Date().toISOString(),",
          "    hasMarketData: false,",
          "    marketDataStructure: null",
          "};",
          "",
          "// Analyze response for market data",
          "if (pm.response.code === 200) {",
          "    try {",
          "        const json = pm.response.json();",
          "        if (json.data && Array.isArray(json.data) && json.data.length > 0) {",
          "            const firstItem = json.data[0];",
          "            testResult.hasMarketData = firstItem.hasOwnProperty('market_data');",
          "            testResult.marketDataStructure = firstItem.market_data ? 'nested' : (firstItem.floor_unit_price ? 'root-level' : 'none');",
          "        }",
          "    } catch (e) {",
          "        console.log('Response parsing error:', e.message);",
          "    }",
          "}",
          "",
          "// Store result",
          "let results = JSON.parse(pm.collectionVariables.get('version_validation_results') || '[]');",
          "results.push(testResult);",
          "pm.collectionVariables.set('version_validation_results', JSON.stringify(results));"
        ]
      }
    }
