                  "        pm.expect(firstItem.mint_progress).to.have.property('total_mints');",
                  "    }",
                  "});",
                  "",
                  "// Store test results for reporting",
                  "pm.globals.set('src20_deploy_enhanced_passed', pm.response.code === 200);"
                ]
