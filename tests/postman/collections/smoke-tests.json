                  "});",
                  "",
                  "pm.test('SRC20 Deploy Enhanced - CRITICAL: stamp_url field validation', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.data.length).to.be.above(0, 'Should return at least 1 deploy operation');",
