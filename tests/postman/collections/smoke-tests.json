                  "        pm.expect(firstItem.market_data).to.have.property('holder_count');",
                  "        pm.expect(firstItem.market_data).to.have.property('market_cap_btc');",
                  "        pm.expect(firstItem.market_data).to.have.property('price_btc');",
                  "    }",
                  "});",
